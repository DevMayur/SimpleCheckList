{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-07-09/server.schema.json",
  "name": "io.github.DevMayur/SimpleCheckList",
  "description": "Advanced SimpleCheckList with MCP server and SQLite database",
  "status": "active",
  "repository": {
    "url": "https://github.com/DevMayur/SimpleCheckList",
    "source": "github"
  },
  "version": "1.0.0",
  "packages": [
    {
      "registry_type": "npm",
      "registry_base_url": "https://registry.npmjs.org",
      "identifier": "simple-checklist",
      "version": "1.0.0",
      "transport": {
        "type": "stdio"
      },
      "environment_variables": [
        {
          "description": "Backend API URL for SimpleCheckList server",
          "is_required": false,
          "format": "string",
          "is_secret": false,
          "name": "API_BASE_URL",
          "default": "http://localhost:8355/api"
        }
      ]
    }
  ]
}