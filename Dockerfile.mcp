# Dockerfile specifically for MCP server distribution
FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache sqlite

# Copy package files
COPY mcp-server/package*.json ./mcp-server/
COPY server/package*.json ./server/
COPY package*.json ./

# Install dependencies
RUN cd mcp-server && npm install
RUN cd server && npm install
RUN npm install

# Copy source code
COPY mcp-server ./mcp-server
COPY server ./server
COPY data ./data

# Create data directory and initialize database
RUN mkdir -p /app/data
RUN cd server && npm run init-db

# Expose ports
EXPOSE 8355 3001

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8355/api/health || exit 1

# Start both backend and MCP server
CMD ["sh", "-c", "cd server && npm start & cd mcp-server && npm start"]
